        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.4.3</version>
    </parent>

    <groupId>org.example</groupId>
    <artifactId>springbootTutorial2025</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
